<%= form_for(@topix) do |f| %>
  <%= f.error_messages! %>
  <%= f.label :content %>
  <%= f.text_field :content, placeholder: "今何してる？？", class: 'form-control' %>
  <br>
  <%= f.label :image %>
  <%= f.file_field :image, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "投稿一覧画面にもどる", topixes_path %>
