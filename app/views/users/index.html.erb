<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= user.name %><p>
    <li>
    <div class="item">
      <%= link_to user.name, user %>
      <% if current_user != user %>
      <% if current_user.following?(user) && user.following?(current_user)%>
      <p><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%><p>
<% end %>
    </div>
    <p><%= render partial: 'follow_form', locals: { user: user } if signed_in? %><p>
    </li>
      </div>
<%end%>

  <% end %>
</div>
